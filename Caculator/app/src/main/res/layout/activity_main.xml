<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <Button
        android:id="@+id/button9"
        android:layout_width="0dp"
        android:layout_height="73dp"
        android:insetLeft="4dp"
        android:insetRight="4dp"
        android:text="9"
        android:textSize="30dp"
        app:backgroundTint="#00BCD4"
        app:layout_constraintBottom_toBottomOf="@+id/button8"
        app:layout_constraintEnd_toEndOf="@+id/button6"
        app:layout_constraintStart_toStartOf="@+id/button6"
        app:layout_constraintTop_toTopOf="@+id/button8" />

    <Button
        android:id="@+id/button8"
        android:layout_width="0dp"
        android:layout_height="73dp"
        android:insetLeft="4dp"
        android:insetRight="4dp"
        android:text="8"
        android:textSize="30dp"
        app:backgroundTint="#00BCD4"
        app:layout_constraintBottom_toBottomOf="@+id/button7"
        app:layout_constraintEnd_toEndOf="@+id/button5"
        app:layout_constraintStart_toStartOf="@+id/button5"
        app:layout_constraintTop_toTopOf="@+id/button7" />

    <Button
        android:id="@+id/button7"
        android:layout_width="0dp"
        android:layout_height="73dp"
        android:insetLeft="4dp"
        android:insetRight="4dp"
        android:text="7"
        android:textSize="30dp"
        app:backgroundTint="#00BCD4"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintEnd_toEndOf="@+id/button4"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button6"
        android:layout_width="0dp"
        android:layout_height="73dp"
        android:layout_marginBottom="136dp"
        android:insetLeft="4dp"
        android:insetRight="4dp"
        android:text="6"
        android:textSize="30dp"
        app:backgroundTint="#00BCD4"
        app:layout_constraintBottom_toBottomOf="@+id/button5"
        app:layout_constraintEnd_toEndOf="@+id/button3"
        app:layout_constraintStart_toStartOf="@+id/button3"
        app:layout_constraintTop_toTopOf="@+id/button5"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button5"
        android:layout_width="0dp"
        android:layout_height="73dp"
        android:insetLeft="4dp"
        android:insetRight="4dp"
        android:text="5"
        android:textSize="30dp"
        app:backgroundTint="#00BCD4"
        app:layout_constraintBottom_toBottomOf="@+id/button4"
        app:layout_constraintEnd_toEndOf="@+id/button2"
        app:layout_constraintStart_toStartOf="@+id/button2"
        app:layout_constraintTop_toTopOf="@+id/button4" />

    <Button
        android:id="@+id/button4"
        android:layout_width="0dp"
        android:layout_height="73dp"
        android:insetLeft="4dp"
        android:insetRight="4dp"
        android:text="4"
        android:textSize="30dp"
        app:backgroundTint="#00BCD4"
        app:layout_constraintBottom_toTopOf="@+id/button1"
        app:layout_constraintEnd_toEndOf="@+id/button1"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="0dp"
        android:layout_height="73dp"
        android:insetLeft="4dp"
        android:insetRight="4dp"
        android:text="3"
        android:textSize="30dp"
        app:backgroundTint="#00BCD4"
        app:layout_constraintBottom_toBottomOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="@+id/buttonpoint"
        app:layout_constraintStart_toStartOf="@+id/buttonpoint"
        app:layout_constraintTop_toTopOf="@+id/button2" />

    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="73dp"
        android:insetLeft="4dp"
        android:insetRight="4dp"
        android:text="2"
        android:textSize="30dp"
        app:backgroundTint="#00BCD4"
        app:layout_constraintBottom_toBottomOf="@+id/button1"
        app:layout_constraintEnd_toEndOf="@+id/button0"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button0"
        app:layout_constraintTop_toTopOf="@+id/button1"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button1"
        android:layout_width="0dp"
        android:layout_height="73dp"
        android:insetLeft="4dp"
        android:insetRight="4dp"
        android:text="1"
        android:textSize="30dp"
        app:backgroundTint="#00BCD4"
        app:layout_constraintBottom_toTopOf="@+id/button00"
        app:layout_constraintEnd_toEndOf="@+id/button00"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button0"
        android:layout_width="0dp"
        android:layout_height="73dp"
        android:insetLeft="4dp"
        android:insetRight="4dp"
        android:text="0"
        android:textSize="30dp"
        app:backgroundTint="#00BCD4"
        app:layout_constraintBottom_toBottomOf="@+id/button00"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline1"
        app:layout_constraintTop_toTopOf="@+id/button00" />

    <Button
        android:id="@+id/button00"
        android:layout_width="0dp"
        android:layout_height="73dp"
        android:layout_marginBottom="4dp"
        android:insetLeft="4dp"
        android:insetRight="4dp"
        android:text="00"
        android:textSize="30dp"
        app:backgroundTint="#00BCD4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonpoint"
        android:layout_width="0dp"
        android:layout_height="73dp"
        android:insetLeft="4dp"
        android:insetRight="4dp"
        android:text="."
        android:textSize="30dp"
        app:backgroundTint="#00BCD4"
        app:layout_constraintBottom_toBottomOf="@+id/button0"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline2" />

    <Button
        android:id="@+id/buttonC"
        android:layout_width="0dp"
        android:layout_height="73dp"
        android:insetLeft="4dp"
        android:insetRight="4dp"
        android:text="C"
        android:textSize="30dp"
        app:backgroundTint="#00BCD4"
        app:layout_constraintBottom_toBottomOf="@+id/buttonCE"
        app:layout_constraintEnd_toEndOf="@+id/button9"
        app:layout_constraintStart_toStartOf="@+id/button9"
        app:layout_constraintTop_toTopOf="@+id/buttonCE" />

    <Button
        android:id="@+id/buttonCE"
        android:layout_width="0dp"
        android:layout_height="73dp"
        android:insetLeft="4dp"
        android:insetRight="4dp"
        android:text="CE"
        android:textSize="30dp"
        app:backgroundTint="#00BCD4"
        app:layout_constraintBottom_toBottomOf="@+id/buttonBS"
        app:layout_constraintEnd_toEndOf="@+id/button8"
        app:layout_constraintStart_toStartOf="@+id/button8"
        app:layout_constraintTop_toTopOf="@+id/buttonBS" />

    <Button
        android:id="@+id/buttonBS"
        android:layout_width="0dp"
        android:layout_height="73dp"
        android:insetLeft="4dp"
        android:insetRight="4dp"
        android:text="BS"
        android:textSize="30dp"
        app:backgroundTint="#00BCD4"
        app:layout_constraintBottom_toTopOf="@+id/button7"
        app:layout_constraintEnd_toEndOf="@+id/button7"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonDiv"
        android:layout_width="0dp"
        android:layout_height="73dp"
        android:insetLeft="6dp"
        android:insetTop="6dp"
        android:insetRight="4dp"
        android:text="/"
        android:textSize="30dp"
        app:backgroundTint="#00BCD4"
        app:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonC"
        app:layout_constraintEnd_toEndOf="@+id/buttonMul"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonMul"
        app:layout_constraintTop_toTopOf="@+id/buttonC"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/buttonMul"
        android:layout_width="0dp"
        android:layout_height="73dp"
        android:layout_marginBottom="90dp"
        android:insetLeft="4dp"
        android:insetRight="4dp"
        android:text="*"
        android:textSize="30dp"
        app:backgroundTint="#00BCD4"
        app:layout_constraintBottom_toBottomOf="@+id/button9"
        app:layout_constraintEnd_toEndOf="@+id/buttonSub"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/button9"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonSub"
        android:layout_width="0dp"
        android:layout_height="73dp"
        android:insetLeft="4dp"
        android:insetRight="4dp"
        android:text="-"
        android:textSize="30dp"
        app:backgroundTint="#00BCD4"
        app:layout_constraintBottom_toBottomOf="@+id/button6"
        app:layout_constraintEnd_toEndOf="@+id/buttonAdd"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonAdd"
        app:layout_constraintTop_toTopOf="@+id/button6"
        app:layout_constraintVertical_bias="0.405" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="0dp"
        android:layout_height="73dp"
        android:insetLeft="4dp"
        android:insetRight="4dp"
        android:text="+"
        android:textSize="30dp"
        app:backgroundTint="#00BCD4"
        app:layout_constraintBottom_toBottomOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="@+id/buttonEqual"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonEqual"
        app:layout_constraintTop_toTopOf="@+id/button3"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/buttonEqual"
        android:layout_width="0dp"
        android:layout_height="73dp"
        android:insetLeft="4dp"
        android:insetTop="6dp"
        android:insetRight="4dp"
        android:text="="
        android:textSize="30dp"
        app:backgroundTint="#00BCD4"
        app:layout_constraintBottom_toBottomOf="@+id/buttonpoint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline3" />

    <TextView
        android:id="@+id/textResult"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="15dp"
        android:gravity="bottom|end"
        android:padding="8dp"
        android:text="0"
        android:textSize="70dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textCalculator"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="90dp"
        android:gravity="bottom|end"
        android:padding="8dp"
        android:text="0"
        android:textSize="70dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>



